# Telegram Bot Configuration
BOT_TOKEN=00000000
WEBHOOK_URL=your_webhook_url_here

# Database Configuration (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./telegram_bot.db
DATABASE_PATH=./telegram_bot.db

# Bot Settings
CHALLENGE_TIMEOUT=300  # 5 minutes in seconds
MAX_CHALLENGE_ATTEMPTS=3
ADMIN_USER_IDS=123456789,987654321  # Comma separated admin user IDs
GROUP_CHAT_ID=-1001234567890  # Your group chat ID

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Pagination Settings
MEMBERS_PER_PAGE=10
RANKINGS_PER_PAGE=20